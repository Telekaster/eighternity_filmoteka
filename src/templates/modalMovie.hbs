<div class="modal__img">
  {{#if poster_path}}
  <img class="modal__poster" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="{{title}}">
  {{else}}
  <img class="modal__poster" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQP8n_VcmefHmHxO3n9bXSMODS_8pGjmKKGbA&usqp=CAU'" alt="{{title}}">
  {{/if}}
</div>
<div class="modal__content">
  <h2 class="modal__title">{{title}}</h2>
  <ul class="movie__infolist">
    <li class="movie__infolist-item">
      <p>Vote/Votes</p><span class="vote">{{vote_average}}</span>
      /
      <span class="vote vote--second">{{vote_count}}</span>
    </li>
    <li class="movie__infolist-item">
      <p>Popularity</p><span class="popularity">{{popularity}}</span>
    </li>
    <li class="movie__infolist-item">
      <p>Original Title</p><span class="original-title">{{title}}</span>
    </li>
    <li class="movie__infolist-item">
      <p>Genre</p>
      <ul class="genre">
        {{#each genres}}
        <li class="genre">{{this.name}}</li>
        {{/each}}
      </ul>
    </li>
  </ul>
  <h3 class="about-title">ABOUT</h3>
  <p class="about-text">{{overview}}</p>
  <ul class="modal-btn__list list">
    <li class="modal-btn--link"><button type="button" class="modal-btn trailer-btn" id="{{id}}">show trailer</button>
    </li>
    <li class="modal-btn--link"><button type="button" class="btn-watched" id="{{id}}">add to watched</button>
    </li>
<li class=""><button type="button" class="btn-queue" id="{{id}}">add to queue</button></li>
    {{!-- Дело рук Олега_______________________________________ --}}
    <li class="modal-btn--link"><button type="button" class="btn-remove_watched is-hidden" id="{{id}}">remove from watched</button>
    </li>
